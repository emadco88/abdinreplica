<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ab_usage_causes_view_tree"
                model="ir.ui.view">
            <field name="name">ab_usage_causes.view.tree</field>
            <field name="model">ab_usage_causes</field>
            <field name="arch"
                   type="xml">
                <tree string="">
                    <field name="name" />
                </tree>
            </field>
        </record>
        <record id="ab_usage_causes_view_form"
                model="ir.ui.view">
            <field name="name">ab_usage_causes.view.form</field>
            <field name="model">ab_usage_causes</field>
            <field name="arch"
                   type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="name"
                                       string="Usage Manner" />
                                <h1>
                                    <div class="d-flex">
                                        <field class="text-break"
                                               name="name"
                                               placeholder="e.g. Fever" />
                                    </div>
                                </h1>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ab_usage_causes_action"
                model="ir.actions.act_window">
            <field name="name">Usage Causes</field>
            <field name="res_model">ab_usage_causes</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>