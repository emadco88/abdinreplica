<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ab_product_tag_view_form" model="ir.ui.view">
            <field name="name">ab_product_tag_view_form</field>
            <field name="model">ab_product_tag</field>
            <field name="arch" type="xml">
                <form string="ab_product_tag_form">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="tag_type" required="1"/>
                            <field name="priority" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>