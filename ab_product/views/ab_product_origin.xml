<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ab_product_origin_view_tree" model="ir.ui.view">
            <field name="name">ab_product_origin.view.tree</field>
            <field name="model">ab_product_origin</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="ab_product_origin_view_form" model="ir.ui.view">
            <field name="name">ab_product_origin.view.form</field>
            <field name="model">ab_product_origin</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <label for="name" string="Origin"/>
                                <h1>
                                    <div class="d-flex">
                                        <field class="text-break" name="name" placeholder="e.g. Local"/>
                                    </div>
                                </h1>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ab_product_origin_action" model="ir.actions.act_window">
            <field name="name">Origins</field>
            <field name="res_model">ab_product_origin</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
